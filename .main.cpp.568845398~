void saveGame(){

  
}


void starter(){
  cout << "Starter Menu:" << endl
   << "===============" << endl
   << "1. New Game" << endl
   << "2. Load Game" << endl
   << "3. Quit Game" << endl;
}

void menu(){
  cout << "GAME MENU" << endl 
     << " ----------------- " << endl
     << "1. Explore" << endl
     << "2. Inventory" << endl
     << "3. Save Game" << endl 
     << "4. Quit" << endl;
}

int main() {

  starter();
  int choice;
  bool cont = true;
  cin >> choice;

  
  while(cont == true){
    switch(choice){
      case 1:
        cout << endl << "You have chosen to start a new game." << endl;
        createCharacter();
        cont = false;
        break;
      case 2:
        cout << "You have chosen to load a game." << endl;
        loadGame();
        cont = false;
        break;
      case 3:
        cout << "You have chosen to quit the game." << endl;
        exit(1);
        break;
      default:
        cout << "Invalid choice. Select again." << endl;
        cin >> choice;
    }
  }
}